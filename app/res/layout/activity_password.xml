<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".view.activities.PasswordActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/password_tv"
            android:textSize="24dp"
            android:textColor="@color/txt_color"
            android:text="@string/inputPassWord"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/pin_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="9"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_gravity="center_horizontal">

            <TextView android:id="@+id/pin_1"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_2"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_3"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_4"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_5"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_6"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_7"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_8"
                style="@style/txt_pin" />
            <TextView android:id="@+id/pin_9"
                style="@style/txt_pin" />

        </LinearLayout>
        <EditText android:id="@+id/pin_hidden_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:padding="12dp"
            android:cursorVisible="false"
            android:maxLength="9"
            android:textColor="#00000000"
            android:inputType="numberPassword" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>