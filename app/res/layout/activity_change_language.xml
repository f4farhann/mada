<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activities.ChangeLanguageActivity">
    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/plz_select_the_preferred_language">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

            <RadioButton
                android:id="@+id/english_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/all_corner_bg_shape"

                android:layout_margin="10dp"
                android:padding="20dp"
                android:buttonTint="@color/app_color"
                android:text="English"
                android:gravity="center"
                android:orientation="vertical">
            </RadioButton>
            <RadioButton
                android:id="@+id/arabic_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:background="@drawable/all_corner_bg_shape"
                android:gravity="center"
                android:buttonTint="@color/app_color"
                android:text="عربى"
                android:orientation="vertical">
            </RadioButton>

    </LinearLayout>

</LinearLayout>